<p id="notice"><%= notice %></p>

<div class="container">
    <div class="row">
      <div class="col-md-6">
      	<div class="table-responsive restaurant_info">
          <h2> Order Details: </h2>
          <table class="table table-bordered">
            <tbody>
              <tr>
                <td><strong>Order Title :</strong></td>
                <td><%= @order.tittle %></td>
              </tr>
              <tr>
                <td><strong>Description:</strong></td>
                <td><%= @order.description %></td>
              </tr>
              <tr>
                <td><strong>Selected Time Slot:</strong></td>
                <td><%= @order.time_slot %></td>
              </tr>
              <tr>
                <td><strong>Order Status:</strong></td>
                <td><%= @order.status ? "Completed" : "Pending" %></td>
              </tr>
            </tbody>
          </table>
        </div>      
      </div>
      <div class="col-md-6">
      	<div class="table-responsive restaurant_info">
          <h2> Food Item Details: </h2>
					<table class="table table-bordered">
			      <tbody>
			        <tr>
			          <td><strong>Item Title:</strong></td>
			          <td><strong>Description:</strong></td>
			          <td><strong>Price:</strong></td>
			        </tr>
		      		<%= render partial: 'food_item', collection: @food_items %>
		      	</tbody>
		      </table>
      	</div>
      </div>	
    </div>
    <hr/>
    <div class="row">
      <div class="col-md-6">
        <h2> Default Address: </h2>
        <%= render partial: 'address/address', collection: @address, locals: {order: @order} %>
      </div>
      <div class="col-md-6">
        <h2> Total Order Price : <%= @total_price %> </h2>
        <hr/>
        <%= render file: 'payment_methods/get_payment_methods', locals: {order: @order }%>
      </div>
    </div>
</div>
<hr/>
<%= link_to 'Edit Order', edit_order_path(@order), class: "btn btn-primary" unless @order.status %> |
<%= link_to 'Back', orders_path, class: "btn btn-primary" %>
